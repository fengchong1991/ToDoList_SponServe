
@model  int

<!-- Modal -->
@using (Html.BeginForm("AddToDo", "ToDoList", FormMethod.Post))
{
    <div class="modal fade" id="add-todo" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add to do</h4>
                </div>

                <div class="modal-body">
                    <div>
                        <label for="todo-input">To-do title:</label>
                        <input id="todo-input" class="form-control" type="text" name="toDoTitle" placeholder="e.g. finish math assignment" />
                    </div>
                    <br />
                    <div>
                        <label>Urgency:</label>
                        <br />
                        <label class="radio-inline">
                            <input type="radio" name="urgency" value="1">Normal
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="urgency" value="2">Urgent
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="urgency" value="3">Very Urgent
                        </label>
                    </div>
   

                </div>
                <div class="modal-footer">

                    <input type="submit" class="btn btn-default" value="Add" />
                </div>
            </div>

        </div>
    </div>
    <input type="hidden" name="categoryId" value="@Model" />
}
