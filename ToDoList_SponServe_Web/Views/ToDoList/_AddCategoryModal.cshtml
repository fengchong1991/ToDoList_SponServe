


<!-- Modal -->
@using (Html.BeginForm("AddCategory", "ToDoList", FormMethod.Post))
{
    <div class="modal fade" id="add-category" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add category</h4>
                </div>

                <div class="modal-body">
                    <label for="category-input">Category name:</label>
                    <input id="category-input" class="form-control" type="text" name="categoryName" placeholder="e.g. work" />

                </div>
                <div class="modal-footer">

                    <input type="submit" class="btn btn-default" value="Add"/>
                </div>
            </div>

        </div>
    </div>
}
