@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>To-Do List</h1>
    <p class="lead">This is a simple to-do list application. It is created to demonstrate technical capability.</p>

    <div id="login-overlay" class="login-modal modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Login to To-Do List</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="well">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
                            {
                                <div class="warning">
                                    @TempData["error msg"]
                                </div>

                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="username" class="control-label">Username</label>
                                    <input type="text" class="form-control" id="username" name="Email" value="" required="" title="Please enter you username" placeholder="example@gmail.com">
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="Password" value="" required="" title="Please enter your password">
                                    <span class="help-block"></span>
                                </div>
                                <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>

                                <button type="submit" class="btn btn-success btn-block">Login</button>

                                <p>New user? @Html.ActionLink("Register here", "Register", "Account")</p>
                            }

  
                        </div>
                    </div>
                    <div class="col-md-6">
                        <p class="lead">Register now for <span class="text-success">FREE</span></p>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="fa fa-check text-success"></span> Create to-dos</li>
                            <li><span class="fa fa-check text-success"></span> Cloud based</li>
                            <li><span class="fa fa-check text-success"></span> Register for free</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>